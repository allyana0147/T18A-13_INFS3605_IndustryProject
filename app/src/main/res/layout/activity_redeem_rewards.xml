<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="36dp"
        app:tint="#305049"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Congratulations! You can choose ONE of the following reward:"
        android:textColor="#305049"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView19" />

    <Button
        android:id="@+id/bt_redeem_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:fontFamily="@font/poppins_medium"
        android:text="redeem reward!"
        android:textSize="14sp"
        app:backgroundTint="#305049"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/rg_rewards"
        android:layout_width="326dp"
        android:layout_height="315dp"
        app:layout_constraintBottom_toTopOf="@+id/bt_redeem_reward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView29">

        <RadioButton
            android:id="@+id/rb_reward1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$10 Coles gift card" />

        <RadioButton
            android:id="@+id/rb_reward2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30% off JB-HiFi voucher" />

        <RadioButton
            android:id="@+id/rb_reward3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15% off Myer voucher" />

        <RadioButton
            android:id="@+id/rb_reward4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$10 Amazon gift card" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>